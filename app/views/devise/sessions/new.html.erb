
<div class="vh-100">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-xl-10">
        <div class="card" style="border-radius: 1rem;">
          <div class="row g-0">
            <div class="col-md-6 col-lg-5 d-none d-md-block">
              <%= image_tag "signin.jpg", alt:"image de connection", class:"img-fluid", style:"border-radius: 1rem 0 0 1rem;" %>
            </div>
            <div class="col-md-6 col-lg-7 d-flex align-items-center">
              <div class="card-body text-black">
                <div class="mb-6">
                  <h3> Se connecter </h3>
                </div>
                <div>
                  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                    <div class="field form-outline mb-4">
                      <%= f.label :email, class:"form-label", for:"form2Example17", value:"Adresse email" %><br />
                      <%= f.email_field :email, autofocus: true, autocomplete: "email", id:"form2Example17", class:"form-control form-control-lg" %>
                    </div>

                    <div class="field">
                      <%= f.label :password, class:"form-label", for:"form2Example27", value:"Mot de passe" %><br />
                      <%= f.password_field :password, autocomplete: "current-password", id:"form2Example27", class:"form-control form-control-lg" %>
                    </div>

                    <% if devise_mapping.rememberable? %>
                      <div class="field">
                        <%= f.check_box :remember_me %>
                        <%= f.label :remember_me, value:"Se souvenir de moi" %>
                      </div>
                    <% end %>

                    <div class="actions pt-1 mb-4">
                      <%= f.submit "Valider", class:"btn btn-dark btn-lg btn-block" %>
                    </div>
                  <% end %>
                </div>
                <%= render "devise/shared/links" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
